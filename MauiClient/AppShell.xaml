<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiClient"
    xmlns:page="clr-namespace:MauiClient.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate page:MainPage}"/>
        <ShellContent
            Title="Charts"
            Icon="chart_areaspline.png"
            ContentTemplate="{DataTemplate page:ChartsPage}"/>
    </TabBar>
</Shell>
